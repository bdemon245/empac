<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:foregroundGravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="6dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:gravity="center_horizontal"
            android:text="Welcome to EMPAC"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:textColor="@color/blue"
            android:textSize="35sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For You"
            android:textColor="@color/blue"
            android:layout_marginStart="15sp"
            android:layout_marginTop="20sp"
            android:textSize="24sp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="40sp"
            tools:ignore="contentDescription">

            <ImageView
                android:id="@+id/menu1"
                android:layout_width="93sp"
                android:layout_height="93sp"
                android:layout_margin="10sp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_launcher_background" />

            <ImageView
                android:id="@+id/menu2"
                android:layout_width="93sp"
                android:layout_height="93sp"
                android:layout_margin="10sp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/calculator_menu" />

            <ImageView
                android:id="@+id/menu3"
                android:layout_width="93sp"
                android:layout_height="93sp"
                android:layout_margin="10sp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_launcher_background" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginTop="20sp"
            android:text="Menu"
            android:textColor="@color/blue"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            tools:ignore="contentDescription">

            <ImageView
                android:id="@+id/menu4"
                android:layout_width="93sp"
                android:layout_height="93sp"
                android:layout_margin="10sp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_launcher_background" />

            <ImageView
                android:id="@+id/menu5"
                android:layout_width="93sp"
                android:layout_height="93sp"
                android:layout_margin="10sp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_launcher_background" />

            <ImageView
                android:id="@+id/menu6"
                android:layout_width="93sp"
                android:layout_height="93sp"
                android:layout_margin="10sp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_launcher_background" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            tools:ignore="contentDescription">

            <ImageView
                android:id="@+id/menu7"
                android:layout_width="93sp"
                android:layout_height="93sp"
                android:layout_margin="10sp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_launcher_background" />

            <ImageView
                android:id="@+id/menu8"
                android:layout_width="93sp"
                android:layout_height="93sp"
                android:layout_margin="10sp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_launcher_background" />

            <ImageView
                android:id="@+id/menu9"
                android:layout_width="93sp"
                android:layout_height="93sp"
                android:layout_margin="10sp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_launcher_background" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            tools:ignore="contentDescription">

            <ImageView
                android:id="@+id/menu10"
                android:layout_width="93sp"
                android:layout_height="93sp"
                android:layout_margin="10sp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_launcher_background" />

            <ImageView
                android:id="@+id/menu11"
                android:layout_width="93sp"
                android:layout_height="93sp"
                android:layout_margin="10sp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_launcher_background" />

            <ImageView
                android:id="@+id/menu12"
                android:layout_width="93sp"
                android:layout_height="93sp"
                android:layout_margin="10sp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_launcher_background" />
        </LinearLayout>
        <!-- add rest of the elements here-->

        <!--footer-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Copyright | All rights reserved to 7th CMT, Empac College of Technology | Session 2018-2019"
            android:textAlignment="center"
            android:paddingTop="30dp"
            android:paddingRight="20sp"
            android:paddingLeft="20sp"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>
</ScrollView>