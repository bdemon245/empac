<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity1"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    tools:ignore="HardcodedText"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="6dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:gravity="center_horizontal"
            android:text="Welcome to EMPAC"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:textColor="@color/blue"
            android:textSize="30sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Most Used"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_marginStart="15sp"
            android:layout_marginTop="10sp"
            android:textSize="22sp"/>

        <!--Top menus-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            tools:ignore="contentDescription">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="3sp">
                <ImageView
                    android:id="@+id/menu1"
                    android:layout_width="85sp"
                    android:layout_height="65sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_best_empac" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="@string/head_1"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="3sp">
                <ImageView
                    android:id="@+id/menu3"
                    android:layout_width="85sp"
                    android:layout_height="65sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_admission" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="Admission Info"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="3sp">
                <ImageView
                    android:id="@+id/menu2"
                    android:layout_width="85sp"
                    android:layout_height="65sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_calculator_empac" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="CGPA Calculator"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginTop="15sp"
            android:text="Menu"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            tools:ignore="contentDescription">
            <!--Menu 4 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp">
                <ImageView
                    android:id="@+id/menu4"
                    android:layout_width="75sp"
                    android:layout_height="75sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_principal" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="@string/principal_speech"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <!--Menu 5 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp">
                <ImageView
                    android:id="@+id/menu5"
                    android:layout_width="75sp"
                    android:layout_height="75sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_depts" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="@string/depts"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <!--Menu 6 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp">
                <ImageView
                    android:id="@+id/menu6"
                    android:layout_width="75sp"
                    android:layout_height="75sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_books" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="@string/books"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            tools:ignore="contentDescription">
            <!--Menu 7 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp">
                <ImageView
                    android:id="@+id/menu7"
                    android:layout_width="75sp"
                    android:layout_height="75sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_gallery" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="@string/gallery"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <!--Menu 8 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp">
                <ImageView
                    android:id="@+id/menu8"
                    android:layout_width="75sp"
                    android:layout_height="75sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_notice" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="@string/result"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <!--Menu 9 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp">
                <ImageView
                    android:id="@+id/menu9"
                    android:layout_width="75sp"
                    android:layout_height="75sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_postcard" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="@string/probidhan"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            tools:ignore="contentDescription">
            <!--Menu 10 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp">
                <ImageView
                    android:id="@+id/menu10"
                    android:layout_width="75sp"
                    android:layout_height="75sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_graduates" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="@string/graduates"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <!--Menu 11 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp">
                <ImageView
                    android:id="@+id/menu11"
                    android:layout_width="75sp"
                    android:layout_height="75sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_contact" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="@string/contact"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <!--Menu 12 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp">
                <ImageView
                    android:id="@+id/menu12"
                    android:layout_width="75sp"
                    android:layout_height="75sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_credits" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="@string/credits"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>