<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".feedBackAct">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="10sp"
        android:text="Report A Problem"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:textSize="18sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25sp">
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1">
            <TableRow>
                <TextView
                    android:id="@+id/textView1"
                    android:fontFamily="@font/poppins"
                    android:text="Name"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
                <EditText
                    android:id="@+id/et_name"
                    android:backgroundTint="@color/colorPrimary"
                    android:hint="Jhone Doe"
                    android:textColorHint="@color/color2"
                    android:fontFamily="@font/poppins"
                    android:inputType="textCapWords"
                    android:textSize="14sp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/textView2"
                    android:fontFamily="@font/poppins"
                    android:text="Roll No"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
                <EditText
                    android:id="@+id/et_roll"
                    android:backgroundTint="@color/colorPrimary"
                    android:hint="171563"
                    android:textColorHint="@color/color2"
                    android:fontFamily="@font/poppins"
                    android:inputType="number"
                    android:textSize="14sp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/textView3"
                    android:fontFamily="@font/poppins"
                    android:text="Technology"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
                <EditText
                    android:id="@+id/et_tech"
                    android:backgroundTint="@color/colorPrimary"
                    android:hint="ENT , ET or CMT"
                    android:textColorHint="@color/color2"
                    android:fontFamily="@font/poppins"
                    android:inputType="textCapCharacters"
                    android:textSize="14sp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/textView4"
                    android:fontFamily="@font/poppins"
                    android:text="Contact Info"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
                <EditText
                    android:id="@+id/et_contact"
                    android:backgroundTint="@color/colorPrimary"
                    android:hint="Email or Number"
                    android:textColorHint="@color/color2"
                    android:fontFamily="@font/poppins"
                    android:inputType="textCapWords"
                    android:textSize="14sp"/>
            </TableRow>
            <TableRow
                android:layout_marginTop="10sp">

                <TextView
                    android:id="@+id/textView5"
                    android:fontFamily="@font/poppins"
                    android:text="Description"
                    android:textColor="@color/black"
                    android:layout_gravity="top"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_description"
                    android:layout_height="150sp"
                    android:hint="@string/description"
                    android:padding="10sp"
                    android:justificationMode="inter_word"
                    android:textColorHint="@color/color2"
                    android:fontFamily="@font/poppins"
                    android:inputType="textMultiLine"
                    android:background="@drawable/etbg"
                    android:textSize="14sp"/>
            </TableRow>
            <TableRow
                android:layout_marginTop="20sp">
                <Button
                    android:text="Submit"
                    android:id="@+id/btn_submit"
                    android:fontFamily="@font/poppins"
                    android:layout_marginLeft="30sp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    style="@style/TextAppearance.AppCompat.Widget.Button.Colored" />
                <Button
                    android:text="reset"
                    android:id="@+id/btn_reset"
                    android:fontFamily="@font/poppins"
                    android:padding="5sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginLeft="30sp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    style="@style/ThemeOverlay.Material3.Button.TextButton"/>

            </TableRow>
            <TableRow>
            <Button
                android:text="View List"
                android:id="@+id/btn_view_list"
                android:fontFamily="@font/poppins"
                android:padding="5sp"
                android:layout_marginRight="30sp"
                android:layout_marginLeft="30sp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                style="@style/ThemeOverlay.Material3.Button.TextButton"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv_list_view"
        android:clickable="true"/>


</LinearLayout>